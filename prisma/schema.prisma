generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model piece {
  id         Int          @id @default(autoincrement())
  user_id    String?
  title      String?
  status     String?
  created    DateTime?    @default(now())
  updated    DateTime?
  video_info video_info[]
}

model sentences {
  sentence   String?
  video_id   Int?
  created    DateTime?   @default(now())
  updated    DateTime?
  id         Int         @id @default(autoincrement())
  video_info video_info? @relation(fields: [video_id], references: [id])
}

model video_info {
  id        Int         @id @default(autoincrement())
  piece_id  Int?
  video_id  String?
  video_url String?
  created   DateTime?   @default(now())
  updated   DateTime?
  status    String?
  piece     piece?      @relation(fields: [piece_id], references: [id])
  sentences sentences[]
}
